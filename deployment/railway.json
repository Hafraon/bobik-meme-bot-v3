{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt",
    "watchPatterns": [
      "**/*.py",
      "requirements.txt",
      "main.py"
    ]
  },
  "deploy": {
    "startCommand": "python main.py",
    "healthcheckTimeout": 300
  }
}