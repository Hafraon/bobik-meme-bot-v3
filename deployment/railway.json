{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt",
    "watchPatterns": [
      "**/*.py",
      "requirements.txt",
      ".env.example"
    ]
  },
  "deploy": {
    "startCommand": "python main.py",
    "healthcheckTimeout": 300
  },
  "environments": {
    "production": {
      "variables": {
        "ENVIRONMENT": "production",
        "LOG_LEVEL": "INFO",
        "PYTHONUNBUFFERED": "1",
        "TZ": "Europe/Kiev"
      }
    }
  }
}